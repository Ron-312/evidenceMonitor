{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./public",
    "rootDir": "./src/scripts",
    "declaration": false,
    "removeComments": true
  },
  "include": [
    "src/scripts/background.ts",
    "src/scripts/content.ts",
    "src/scripts/main-world-hooks.ts",
    "src/scripts/utils/shared-types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}